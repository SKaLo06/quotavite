{
    "name": "node_ts_normes",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "scripts": {
        "build": "npx tsc",
        "start": "node dist/server.js",
        "dev": "npm run validate && concurrently \"npx tsc --watch\" \"nodemon -q dist/server.js\"",
        "prepare": "husky install",
        "husky-init": "husky set .husky/pre-commit && husky add .husky/pre-commit",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint --fix \"src/**/*.ts\"",
        "lint:any-w-e": "eslint --max-warnings 0 \"src/**/*.ts\"",
        "lint:fix-quiet": "eslint \"src/**/*.ts\" --quiet --fix",
        "format": "eslint src/**/*.ts --fix",
        "prettier": "prettier --write \"src/**/*.ts\"",
        "validate": "npm run lint:any-w-e && npm run prettier -- --list-different"
    },
    "author": "A.Mhiri",
    "license": "ISC",
    "dependencies": {
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "mongoose-typescript": "^2.3.3"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/express": "^4.17.17",
        "@types/node": "^18.14.0",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "concurrently": "^7.6.0",
        "eslint": "^8.34.0",
        "husky": "^8.0.3",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.4",
        "typescript": "^4.9.5"
    }
}
